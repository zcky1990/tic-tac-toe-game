<div class="container mx-auto p-5">
    <div class="flex flex-col gap-2">
        <div class="flex flex-row gap-2 text-center"> 
            <div class="w-1/3">
                <div class="flex flex-col gap-2 text-left">
                    <div class="text-2xl font-bold "> Player 1</div>
                    <label id="player-1-name" class="text-sm block text-gray-700 font-bold mb-2" >Player Name</label>
                    <input class="shadow appearance-none border rounded-full w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="player-1-name-input" type="text" 
                    placeholder="Input Player name">
                    <div id="changeNamePlayerOne" class="text-center px-5 py-2 bg-blue-400 text-white rounded-full">Ready</div>
                </div>
            </div>
            <div class="w-1/3 flex flex-col place-items-center text-center justify-center align-middle">
                <div id="gameMessageStatus" class="p-5">Waiting For Player Ready</div>
                <div class="w-1/3 p-10 grid grid-rows-3 grid-flow-col grid-col-3 place-items-center text-center justify-center align-middle">
                    <div name="0,0" id="row-1-col-1" class="tile h-20 w-20 border text-5xl p-3"></div>
                    <div name="1,0" id="row-2-col-1" class="tile h-20 w-20 border text-5xl p-3"></div>
                    <div name="2,0" id="row-3-col-1" class="tile h-20 w-20 border text-5xl p-3"></div>
                    <div name="0,1" id="row-1-col-2" class="tile h-20 w-20 border text-5xl p-3"></div>
                    <div name="1,1" id="row-2-col-2" class="tile h-20 w-20 border text-5xl p-3"></div>
                    <div name="2,1" id="row-3-col-2" class="tile h-20 w-20 border text-5xl p-3"></div>
                    <div name="0,2" id="row-1-col-3" class="tile h-20 w-20 border text-5xl p-3"></div>
                    <div name="1,2" id="row-2-col-3" class="tile h-20 w-20 border text-5xl p-3"></div>
                    <div name="2,2" id="row-3-col-3" class="tile h-20 w-20 border text-5xl p-3"></div>
                </div>
            </div>
            
            <div class="w-1/3"> 
                <div class="flex flex-col gap-2 text-left">
                    <div class="text-2xl font-bold "> Player 2</div>
                    <label id="player-2-name" class="text-sm block text-gray-700 font-bold mb-2" >Player Name</label>
                    <input class="shadow appearance-none border rounded-full w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="player-2-name-input" type="text" 
                    placeholder="Input Player name">
                    <div id="changeNamePlayerTwo" class="text-center px-5 py-2 bg-blue-400 text-white rounded-full">Ready</div>
                </div>
            </div>
        </div>
        <div class="flex flex-row gap-2 text-center place-content-center content-center"> 
            <div id="endTurn" class="px-5 py-2 bg-blue-400 text-white rounded-full">End </div>
        </div>

        <div class="flex flex-row gap-2 text-center place-content-center content-center"> 
            <div id="resetButton" class="px-5 py-2 bg-blue-400 text-white rounded-full">reset </div>
        </div>
    </div>
</div>